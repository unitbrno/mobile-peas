<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="skodavox.peas.unitbrno.cz.skodavoxapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CalendarPickerActivity" />
        <activity android:name=".activities.MeetingsActivity" >

        </activity>
        <activity android:name=".activities.DetailRecordActivity">
        </activity>
        <activity android:name=".activities.FinishedRecordSessionActivity" />
        <activity android:name=".activities.ActiveRecordSessionActivity"></activity>
    </application>

</manifest>